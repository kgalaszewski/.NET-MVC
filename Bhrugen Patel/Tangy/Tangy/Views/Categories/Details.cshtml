@model Tangy.Models.Category

@{
	ViewData["Title"] = "Details";
}

<br />
<h2>Category type details</h2>
<br />

<div class="form-border">
	<fieldset disabled>
		<div class="form-group row">
			<div class="col-lg-2">
				<label asp-for="Name" class="custom-label"></label>
			</div>
			<div class="col-lg-4">
				<input asp-for="Name" class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<div class="col-lg-2">
				<label asp-for="DisplayOrder" class="custom-label"></label>
			</div>
			<div class="col-lg-4">
				<input asp-for="DisplayOrder" class="form-control" />
			</div>
		</div>
	</fieldset>
	<div class="form-group">
		<a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.Id">Edit</a>
		<a asp-action="Index" class="btn btn-success">Back to List</a>
	</div>
</div>

